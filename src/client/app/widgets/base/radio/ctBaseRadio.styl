// radio 组件
.m-widgets-base-radio
  li
    label
      display: flex
      align-items: center
      span.text
        line-height: 18px
      span.item
        display: inline-block
        cursor: pointer
        line-height: 0
        background-color: #fff
        border: 1px solid #c3c5c6
        border-radius: 50%
        padding: 4px
        margin-right: 10px
        i
          display: inline-block
          width: 8px
          height: 8px
          background-color: #fff
          border-radius: 50%
    label.active
      span.item
        border-color: #00c1de
        i
          background-color: #00c1de
    label.disabled
      span.item
        cursor: not-allowed
        background-color: #f5f5f6
        border-color: #d7d8d9
        i
          background-color: #f5f5f6
    label.active.disabled
      span.item
        background-color: #ebecf0
        border-color: #d7d8d9
        i
          background-color: #d7d8d9

.m-widgets-base-radio-inline
  li
    display: inline-block
    margin-right: 20px
