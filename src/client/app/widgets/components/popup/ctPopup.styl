/*
 * 弹窗组件
 */
.m-widgets-componets-popup
  position: fixed
  left: 0
  top: 0
  display: none
  width: 100%
  height: 100%
  z-index: 9999

.m-widgets-componets-popup.active
  display: block
  .content
    position: absolute
    left: 50%
    top: 50%
    width: 480px
    background-color: #fff
    box-shadow: rgba(0, 0, 0, 0.2) 0 2px 10px
    padding: 24px
    margin: -150px 0 0 -240px
    z-index: 9
    h6.header
      position: relative
      display: flex
      color: #373d41
      font-size: 18px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      margin: 0
      span
        flex: auto
      i
        display: inline-block
        color: #9b9ea0
        cursor: pointer
        font-style: normal
        padding: 0 5px
    .body
      font-size: 14px
      line-height: 24px
      margin-top: 20px
    .footer
      text-align: right
      margin-top: 30px
      .btn
        margin-left: 10px
  .background
    position: absolute
    left: 0
    top: 0
    width: 100%
    height: 100%
    background-color: #373d41;
    opacity: 0.5
    z-index: 1
