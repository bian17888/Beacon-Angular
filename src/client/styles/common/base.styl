/*
 * 基础样式
 */
body
  color: #373d41
  font-family: "PingFangSC", "Microsoft Yahei", Helvetica, Arial
  font-size: 12px
  line-height: 1.5

ul, ol, li {
  list-style: none;
  margin: 0
  padding: 0
}

a
  color: #00c1de
  text-decoration: none
  transition: color .2s

a:hover
  text-decoration: underline

::-webkit-input-placeholder { /* Chrome/Opera/Safari */
  color: #c3c5c6;
}

::-moz-placeholder { /* Firefox 19+ */
  color: #c3c5c6;
}

:-ms-input-placeholder { /* IE 10+ */
  color: #c3c5c6;
}

.clearfix:after {
  clear: both;
  content: " ";
  display: block;
  font-size: 0;
  height: 0;
  visibility: hidden;
}

.clearfix {
  zoom: 1;
}

.ml-10
  margin-left: 10px

.mt-10
  margin-top: 10px

/*文本溢出*/
.overflow-ellipsis
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap
